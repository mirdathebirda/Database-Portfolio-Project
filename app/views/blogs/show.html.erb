<div class ="blog">
<% if current_user && @blog.owner == current_user.id %>
  <div class="pull-right">
     <%= link_to('New Post', "/blogs/#{@blog.id}/posts/new", :class => 'btn btn-primary')  %>
  </div>
<% end %>
<center>
  <h1><%= @blog.title %></h1>
  <h3><%= @blog.description %></h3>
</center>

<% @blog.posts.each do |post| %>
  <div class="post-card">
    <h1><%= post.title %></h1>
    <h3><%= post.body %></h3>
    <%= link_to('Visit', "/blogs/#{@blog.id}/posts/#{post.id}", :class => 'btn btn-primary')  %>
    <% if current_user && post.author == current_user.id %>
      <%= link_to('Edit', "/blogs/#{@blog.id}/posts/#{post.id}/edit", :class => 'btn btn-default')  %>
    <% end %>
  </div>
<% end %>
</div>
