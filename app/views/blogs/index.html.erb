<div class = "browse-blog">
<h2>Browse Blogs</h2>

<% @blogs.each do |blog| %>
  <div class="blog-card">
    <h2><%= blog.title%></h2>
    <h3><%= blog.description%></h3>
    <%= link_to('Visit', "/blogs/#{blog.id}", :class => 'btn btn-primary')  %>
    <% if current_user && blog.owner == current_user.id %>
      <%= link_to('Edit', "/blogs/#{blog.id}/edit", :class => 'btn btn-default')  %>
    <% end %>
  </div>
<% end %>
</div> 
